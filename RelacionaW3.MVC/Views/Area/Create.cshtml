
@model RelacionaW3.MVC.Models.AreaViewModel;

@{
    ViewData["Title"] = "Areas";
}

<h2>Areas</h2>
<hr />

 <div class="card">
    <div class="card-header">
      <i class="fa fa-calendar"></i> 
       <strong> Nova Área</strong>
    </div>
    <div class="card-body">
   <form asp-controller="Area" asp-action="Create" method="post">
    <input type="hidden" asp-for="Id"  />

    <div class="form-group">
        <div class="col-4">
            <label>Descrição:<span class="text-danger">*</span></label>
            <input asp-for="Descricao" type="text" id="txtDescricaoArea" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <br />


        </div>
         <div class="form-group">
        <div class="col-4">
            <label>Usuário Responsável pela Área: <span class="text-danger">*</span></label>
             <div class="input-group-prepend">
             <span class="input-group-text"><i class="fa fa-book"></i></span>
            <select id="cboUsuario"   class="form-control"asp-items="ViewBag.IdUsuario" input-lg></select>
              
        
        </div>


        
            <br />
            <button type="button" class="btn btn-info" onclick="AddUsuario()">Adicionar</button>
            <br />
               <br />
        
    </div>

         <div class="form-group">
        <div class="col-md-12">
            <table class="table table-bordered">
                <thead class="thread-inverse">
                    <tr style="background-color:#f6f6f6;">
                        <th>Usuário</th>
                        <th>Área</th>
                       
                    </tr>
                </thead>
                <tbody id="gridUsuarios"></tbody>
            </table>
        </div>
    </div>

    <textarea asp-for="JsonUsuarios" id="txtJsonUsuarios" class="col" style="display:none;"></textarea>

       

      <div class="card-footer">
        <div class="col">
            <button type="button" class="btn btn-info" onclick="New()">Novo</button>
            <button type="submit" class="btn btn-success">Gravar</button>
            <button type="button" class="btn btn-warning" onclick="Return()">Voltar</button>
            
        </div>
      </div>
</form>

@section Scripts{

<script>
    var Items = new Object();
    Items.Usuarios = new Array();
    var gridUsuarios = document.getElementById("gridUsuarios");

    function AddUsuario() {
        var IdUsuario = document.getElementById("cboUsuario");
        var Descricao = document.getElementById("txtDescricaoArea").value;
       
      
        Items.Usuarios.push({
            "IdUsuario": IdUsuario.value,
            "Descricao": Descricao
          
        });

        document.getElementById("txtJsonUsuarios").value = JSON.stringify(Items.Usuarios);

        var linhaGrid =
            "<tr id='" + IdUsuario.value + "'>" +
            "<td>" + IdUsuario.options[IdUsuario.selectedIndex].text + "</td>" +
            "<td>" + Descricao + "</td>" +
            "</tr>";

        gridUsuarios.innerHTML += linhaGrid;

        document.getElementById("cboUsuario").selectedIndex = -1;            
    }
    
</script>

}

<script>
    function New() {
        window.location = window.origin + "\\Area\\Create";
    }
    function Return() {
        window.location = window.origin + "\\Area\\Index";
    }
   
   
</script>



