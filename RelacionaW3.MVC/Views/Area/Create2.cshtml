
@model RelacionaW3.Dominio.Models.Area;

@{
    ViewData["Title"] = "Areas";
}

<h2>Areas</h2>
<hr />

 <div class="card">
    <div class="card-header">
      Cadastrar Área
    </div>
    <div class="card-body">
   <form asp-controller="Area" asp-action="Create" method="post">
    <input type="hidden" asp-for="Id"  />

    <div class="form-group">
        <div class="col-4">
            <label>Descrição</label>
            <input asp-for="Descricao" type="text"  class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <br />

       

      <div class="card-footer">
        <div class="col">
            <button type="button" class="btn btn-info" onclick="Novo()">Novo</button>
            <button type="submit" class="btn btn-success">Gravar</button>
            <button type="button" class="btn btn-warning" onclick="Listagem()">Listagem</button>
            
        </div>
      </div>
</form>

<script>
    function Novo() {
        Request("Create");
    }
    function Listagem() {
        Request("");
    }
    function Excluir(Id) {
        Request("Excluir\\" + Id);
    }
    function Request(request) {
        window.location = window.origin + "\\Area\\" + request;
    }
</script>



