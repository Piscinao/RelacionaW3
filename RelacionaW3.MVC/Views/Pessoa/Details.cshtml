    <hr />
    
    <div class="x_panel">
    <div class="x_title">
        <!-- <h2>Detalhes @Model.Id.ToString(): </h2> -->
        <h2>Detalhes: </h2>
        <div class="clearfix"></div>
    </div>

        <button type="reset" class="btn btn btn-info btn-3d" onclick="Return()"><i class="fa fa-arrow-left"></i> Voltar</button>

<hr />
