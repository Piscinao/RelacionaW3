                <th style="width: 15%; background-color: lightgrey">Classificação:</th>
                <th style="font-weight: normal; width: 35%">@Html.DisplayFor(model => @Model.Classificacao)</th>
            </tr>
        </table>

        <table class="table-bordered table-striped table-condensed" style="width: 100%">
            <tr>
                <th style="width: 15%; background-color: lightgrey">Email:</th>
                <th style="font-weight: normal; width: 35%">@Html.DisplayFor(model => @Model.Email)</th>
                <th style="width: 15%; background-color: lightgrey">Celular:</th>
                <th style="font-weight: normal; width: 35%">@Html.DisplayFor(model => @Model.Celular)</th>
            </tr>
        </table>

        <table class="table-bordered table-striped table-condensed" style="width: 100%">
            <tr>
                <th style="width: 15%; background-color: lightgrey">Telefone:</th>
                <th style="font-weight: normal; width: 35%">@Html.DisplayFor(model => @Model.Telefone)</th>
                <th style="width: 15%; background-color: lightgrey">Empresa:</th>
                <th style="font-weight: normal; width: 35%">@Html.DisplayFor(model => @Model.Empresa)</th>
            </tr>
        </table>

        <table class="table-bordered table-striped table-condensed" style="width: 100%">
            <tr>
                <th style="width: 15%; background-color: lightgrey">CPF:</th>
                <th style="font-weight: normal; width: 35%">@Html.DisplayFor(model => @Model.CPF)</th>
                <th style="width: 15%; background-color: lightgrey">CNPJ:</th>
                <th style="font-weight: normal; width: 35%">@Html.DisplayFor(model => @Model.CNPJ)</th>
            </tr>
        </table>
