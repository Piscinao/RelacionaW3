   <script>
    function ExibirModal(id) {
    Swal.fire({
         title: 'Você tem certeza?',
         text: "Esta ação não poderá ser desfeita!",
         icon: 'warning',
         showCancelButton: true,
         confirmButtonColor: '#3085d6',
         cancelButtonColor: '#d33',
         confirmButtonText: 'Sim, excluir!',
         cancelButtonText: 'Cancelar'
    }).then((result) => {
       if (result.value) {
         Swal.fire(
               'Excluído!',
               'O item foi excluído com sucesso.',
               'success'
               )
         $.ajax({
            method: "POST",
            url: "/Pessoa/Delete",
            data: { id: id },
            success: function () {
            location.reload();
           // dataTable.reload(); 
                    }
        });
    
  }
})}
 </script>



<script>
    function Editar(Id) {
        window.location = window.origin + "\\Pessoa\\Edit\\" + Id;
    }

    function Create() {
        window.location = window.origin + "\\Pessoa\\Create";
    }

    function Details(Id) {
        window.location = window.origin + "\\Pessoa\\Details\\" + Id;
    }

    function Excluir(Id) {
         window.location = window.origin + "\\Pessoa\\Delete\\" + Id;
    }

    function Return() {
        window.location = window.origin + "\\Home\\Index";
    }
    
</script>


