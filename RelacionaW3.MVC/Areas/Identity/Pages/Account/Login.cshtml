@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout =  null;
}

<link href="~/css/login.css" rel="stylesheet" />


<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <div style="float:left; width:100%; height:20px;"></div>
            <img src="~/images/brand/RelacionaW3-Logo.jpg" id="icon" alt="Logo" />
            <div style="float:left; width:100%; height:20px;"></div>
        </div>
        <!-- Login Form -->
        <form method="post">
            <input asp-for="Input.Email" type="text" class="fadeIn second" placeholder="Email">
            <span asp-validation-for="Input.Email" style="color:red;"></span>
            <input asp-for="Input.Password" type="password" class="fadeIn third" placeholder="Senha">
            <span asp-validation-for="Input.Password" style="color:red;"></span>
            <br/>
            <input type="submit" class="fadeIn fourth" value="Entrar">
            <br />
            <span style="color:red;">@ViewData["ErroLogin"]</span>
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            <a class="underlineHover" href="#">Esqueceu a Senha?</a>
        </div>

    </div>
</div>

